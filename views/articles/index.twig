{% extends 'layouts/main.twig' %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Articles</h1>
    <a href="/article/create" class="bg-green-500 text-white px-4 py-2 rounded mb-4 inline-block">Create New Article</a>
    <ul class="space-y-4">
        {% for article in articles %}
            <li class="bg-white p-4 rounded shadow-md">
                <h2 class="text-xl font-bold">{{ article.title }}</h2>
                <p>{{ article.content|slice(0, 200) }}{{ article.content|length > 200 ? '...' }}</p>
                <div class="mt-4">
                    <a href="/article/{{ article.id }}" class="text-blue-500">Read more</a>
                    <a href="/article/{{ article.id }}/edit" class="text-yellow-500 ml-2">Edit</a>
                    <a href="/article/{{ article.id }}/delete" class="text-red-500 ml-2">Delete</a>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
