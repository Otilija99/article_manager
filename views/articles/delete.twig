{% extends 'layouts/main.twig' %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Delete Article</h1>
    <p>Are you sure you want to delete this article?</p>
    <form action="/article/{{ article.id }}/delete" method="post" class="bg-white p-4 rounded shadow-md">
        <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
    </form>
    <a href="/article/{{ article.id }}" class="mt-4 inline-block text-blue-500">Back to Article</a>
{% endblock %}
